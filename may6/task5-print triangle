using System;

public class TrianglePrinter
{
    public static void PrintTriangle(int n)
    {
        for(int i=1; i<=n;i++)
        {
            for(int j=1;j<=i;j++)
            {  
            
                Console.WriteLine("*");
            }
            Console.WriteLine();
        }
    }
    public static void Main()
    {
        int n = 4;
        PrintTriangle(n);
    }
        
}